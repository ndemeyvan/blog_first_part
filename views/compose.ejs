<%- include("partials/header"); -%>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Ecrire un nouvelle article.</h1>
</div>

<div class="container p-5">
    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">AJouter un titre</label>
            <input type="text" name="title" class="form-control" placeholder="ajouter un titre">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Contenue de votre texte</label>
            <textarea name="text" class="form-control" id="exampleFormControlTextarea1" rows="8"
                placeholder="ajouter du texte"></textarea>
        </div>
        <button type="submit" class="btn bg-warning text-white">Publier</button>
    </form>
</div>
<%- include("partials/footer"); -%>